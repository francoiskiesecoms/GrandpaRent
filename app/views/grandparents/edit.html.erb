<div class="container-wraper">
  <div class="container-form">
    <h2> <%= "Edit " + @grandparent.name %> </h2>
      <%= simple_form_for(@grandparent) do |f| %>
      <!-- [...] -->
        <%= f.input :age %>
        <%= f.input :address %>
        <%= f.input :speciality %>
        <%= f.input :picture %>
        <%= f.input :picture_cache, as: :hidden %>
        <%= f.button :submit %>
      <% end %>
    <h2> <%= "Edit availibility of " + @grandparent.name %></h2>

    <%= form_for @grandparent do |f| %>
              <!-- [...] -->

      <div class="form-group">
        <%= f.label :start_date %>
        <%= f.text_field :start_date, :data => {:provide => "datepicker"} , class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :end_date %>
        <%= f.text_field :end_date, :data => {:provide => "datepicker"}, class: 'form-control'  %>
      </div>
        <%= f.submit "Change availibility", class: "btn btn-primary" %>
    <% end %>


  </div>
</div>
