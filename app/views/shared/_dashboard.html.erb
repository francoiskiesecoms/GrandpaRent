



    <div class="container">
      <div class="profile text-center">
        <div class="main">
          <div class="main-content">

            <%= image_tag current_user.photo.url, :class=> "img-circle", style:"height: 130px;" %>
            <h2><%= current_user.name.capitalize %></h2>

            <%= link_to "Edit my profile", profile_edit_path, :class=>"btn btn-primary btn-lg"  %>
          </div>
        </div>
        <div class="stat">
          <div class="stat-content">
            <h3>E-mail</h3>
            <p><%= current_user.email %></p>
          </div>
        </div>
        <div class="stat">
          <div class="stat-content">
            <h3>758</h3>
            <p>followers</p>
          </div>
          </div>
        <div class="stat">
          <div class="stat-content">
            <h3>119</h3>
            <p>repositories</p>
          </div>
          </div>
        <div class="description">
          <div class="description-content">
            <h3>More about</h3>
            <p class="text-justify">
              <% if current_user.description.nil? %>
                <p>No description yet</p>
              <%else%>
                <%= current_user.description %>
              <%end%>
            </p>
          </div>
        </div>
      </div>
    </div>


